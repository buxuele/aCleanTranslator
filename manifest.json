{
  "manifest_version": 3,
  "name": "立马翻译",
  "version": "1.1.0",
  "description": "选中文字，右键即时翻译。支持历史记录导出。",
  "permissions": ["contextMenus", "storage", "downloads"],
  "host_permissions": ["https://api.groq.com/*"],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/banner.css"],
      "js": ["js/content_script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16_active.png",
      "48": "icons/icon48_active.png",
      "128": "icons/icon128_active.png"
    },
    "default_title": "查看翻译历史"
  },
  "icons": {
    "16": "icons/icon16_active.png",
    "48": "icons/icon48_active.png",
    "128": "icons/icon128_active.png"
  }
}
